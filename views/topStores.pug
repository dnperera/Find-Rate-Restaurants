extends layout
block content
  .inner
    h2 Top #{stores.length} Stores
    table.table
      thead
        td Photo
        td Ranking
        td Name
        td Reviews
        td Average Rating
      each store,i in stores
        tr
          td: img(width=200 src=`/uploads/${store.photo||'store.png'}` alt=store.name)
          td #{i+1}
          td: a(href=`/stores/${store.slug}`)=store.name
          td= store.reviews.length
          td #{store.averageRating.toFixed(1)} / 5